@model IEnumerable<FruitAndVegetableWarehouseManagement.Models.Supplier>

@{
    ViewData["Title"] = "Dostawcy";
}

<div>
    <h3>Dostawcy</h3>
    <table class="table border">
        <thead>
            <tr>
                <th style="width: auto" scope="col">Nazwa firmy</th>
                <th style="width: auto" scope="col">Adres</th>
                <th style="width: auto" scope="col">Liczba dostarczanych produktów</th>
                <th style="width: auto" scope="col"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var supplier in Model)
            {
            <tr>
                <td>@supplier.CompanyName</td>
                <td>@supplier.Address()</td>
                <td>@supplier.Products.Count</td>
                <td><a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="AddSupply" asp-route-supplierId="@supplier.CompanyID">Dostawa</a></td>
            </tr>
            }
        }
        <tr class="border-top">
            <td><a class="btn btn-outline-primary" asp-controller="Home" asp-action="AddSupplier">Dodaj dostawcę</a></td>
            <td></td><td></td><td></td>
        </tr>
        </tbody>
    </table>
</div>
