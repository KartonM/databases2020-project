@model FruitAndVegetableWarehouseManagement.ViewModels.AddSupplyProductViewModel
@{
    ViewData["Title"] = "Dodaj produkt do dostawy";
}

<form asp-action="AddSupplyProduct" asp-controller="Home" method="post">
    <input asp-for="SupplyId" value="@Model.Supply.SupplyId" type="hidden" />
    <h4>Dodaj produkt do dostawy</h4>
    <p>
        <b>Dostawca: </b>@Model.Supply.Supplier.CompanyName<br />
        <b>Data: </b>@Model.Supply.DateTimeString()
    </p>
    <div class="form-row">
        <div class="form-group col-6">
            <label asp-for="ProductId">Produkt</label>
            <select asp-for="ProductId" class="custom-select"
                    asp-items="@(new SelectList(Model.Supply.Supplier.Products, "ProductID", "Name"))">
                <option>Wybierz produkt</option>
            </select>
        </div>
        <div class="form-group col-6">
            <label asp-for="Kilograms">Ilość [kg]</label>
            <input asp-for="Kilograms" class="form-control" required="required">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Dodaj</button>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>